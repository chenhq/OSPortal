= form_for @os_type do |f|
  - if @os_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@os_type.errors.count, "error")} prohibited this os_type from being saved:"
      %ul
        - @os_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :family
    = f.text_field :family
  .field
    = f.label :desc
    = f.text_field :desc
  .actions
    = f.submit 'Save'
