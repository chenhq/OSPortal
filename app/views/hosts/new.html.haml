.container
	.modal-header		
		= link_to "×", :hosts, class: "close"
		%h3 创建主机
	.modal-body
		.row
			.span8
				#host_create_step1			
					-# = render 'hosts/image_select'
					= render 'hosts/image_select1'
					= render 'hosts/flavor_select'
					= render 'hosts/charge_select'
				#host_create_step2			
					= render 'hosts/host_conf'

			.span3
				= render 'hosts/current_conf'
	.modal-footer
		#step1_btns
			= link_to "下一步", "#", class: "btn btn-primary", id: "step1_btn"
		#step2_btns
			= link_to "上一步", "#", class: "btn btn-primary", id: "step2_btn_pre"
			= link_to "提交订单", "", class: "btn btn-primary", id: "step2_btn_commit"



