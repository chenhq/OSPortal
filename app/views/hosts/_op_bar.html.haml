.btn-toolbar
	.btn-group{:style => "float:left;"}
		= link_to '<i class="icon-plus"></i>创建主机'.html_safe, 
		          :new_host, class: "btn", 
							:data => {:toggle=>"modal"}
	.btn-group{:style => "float:left;"}
		%button.btn.instance-control-btn{:action => "repay", :disabled => "disabled", :href => "#"}
			%i.icon-shopping-cart>
			续费
	.btn-group{:style => "float:left;"}
		%button.btn.instance-control-btn{:action => "start", :disabled => "disabled", :href => "#"}
			%i.icon-play>
			开机
		%button.btn.instance-control-btn{:action => "shutdown", :disabled => "disabled", :href => "#"}
			%i.icon-stop>
			关机
		%button.btn.instance-control-btn{:action => "poweroff", :disabled => "disabled", :href => "#"}
			%i.icon-off>
			断电
		%button.btn.instance-control-btn{:action => "reboot", :disabled => "disabled", :href => "#"}
			%i.icon-repeat>
			重启
	.btn-group{:style => "float:left;"}
		%button.btn{:action => "login", :disabled => "disabled"} 应急登录
	.btn-group{:style => "float:left;"}
		%button.btn.instance-control-btn{:action => "create_image", :disabled => "disabled"} 制作镜像
	.btn-group.pull-left
		%a.btn{"data-toggle" => "dropdown", :href => "#"}
			%i.icon-oper
			更多操作
		%a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
			%span.caret
		%ul.dropdown-menu
			%li
				%a{:href => "#", :itemop => "scale_up"}
					%i.icon-up
					升级配置
			%li
				%a{:href => "#", :itemop => "reinstall_os"}
					%i.icon-os
					重装系统
			%li
				%a{:href => "#", :itemop => "delete"}
					%i.icon-trash
					删除主机
	.btn-group
		%a#help_btn.btn.btn-primary{:site => "uhost"}
			%i.icon-question-sign.icon-white>
			帮助
	.btn-group
		%a.btn.refresh{:href => ""}
			%i.icon-refresh>
			刷新


