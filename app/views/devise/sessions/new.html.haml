= provide(:title, "Sign in")

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin"}) do |f|
  %h2.form-signin-heading sign in now
  .login-wrap
    .user-login-info
      = f.email_field :email, :autofocus => "", :placeholder => "Email", :class => "form-control"
      = f.password_field :password, :placeholder => "Password", :class => "form-control"
    - if devise_mapping.rememberable?
      %label.checkbox
        = f.check_box :remember_me
        = f.label :remember_me
        %span.pull-right
          %a{"data-toggle" => "modal", :href => "#myModal"} Forgot Password?
    = f.submit "Sign in", :class => "btn btn-lg btn-login btn-block"
    .registration
      Don't have an account yet?
      %a{:href => "sign_up"}
        Create an account

