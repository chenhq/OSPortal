= provide(:title, "Registration")


= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin"}) do |f|
  %h2.form-signin-heading registration now
  .login-wrap
    %p Enter your personal details below
    .user-login-info
      = f.email_field :email, :autofocus => "", :placeholder => "Email", :class => "form-control"
      = f.password_field :password, :placeholder => "Password", :class => "form-control"
      = f.password_field :password_confirmation,  placeholder: "Confirmation", :class => "form-control"

    - if devise_mapping.rememberable?
      %label.checkbox
        = f.check_box :remember_me
        = f.label :remember_me
        I agree to the Terms of Service and Privacy Policy
    = f.submit "Sign Up", :class => "btn btn-lg btn-login btn-block"
    .registration
      Already Registered.
      %a{:href => "sign_in"}
        Login