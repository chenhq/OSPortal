#mount-volume-modal.modal.fade{ "aria-hidden" => "true", "aria-labelledby" => "mount-volume-lab", :role => "dialog", :tabindex => "-1"}
	.modal-dialog
		.modal-content
			%form#mount-volume.form-horizontal{:action => mount_volumes_path, :method => "POST"}
				.modal-header
					%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
					%h4#create-volume-lab.modal-title 挂载硬盘
				.modal-body
					.form-group
						%label.control-label.col-lg-3{:for => "server_id"} 主机名称 :
						.col-lg-6
							%select.form-control{:name => "server_id"}
								- @servers.each do |s|
									%option{:value => "#{s.id}"} 
										= s.name
					.form-group
						%label.control-label.col-lg-3{:for => "volume_id"} 磁盘名称 :
						.col-lg-6
							%select.form-control{:name => "volume_id"}
								- @volumes.each do |v|
									%option{:value => "#{v.id}"} 
										= v.display_name

					%input{:type=>"hidden", :name=>"authenticity_token", :value=>form_authenticity_token.to_s}

				.modal-footer
					%input.btn.btn-primary{:type => "submit", :value => "确定"}
					%button.btn.btn-primary{"data-dismiss" => "modal", :type => "text"} 取消
