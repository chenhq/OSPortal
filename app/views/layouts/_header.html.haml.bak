.navbar.navbar-inverse.navbar-fixed-top
	.navbar-inner
		.container		
			= link_to "胜世云平台", root_path, :class => "brand"
			%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			.collapse.nav-collapse
				%ul.nav.pull-right
					%li
						= link_to "首页", root_path
					%li
						= link_to "产品介绍", product_path
					%li
						= link_to "关于我们", about_path
					- if user_signed_in?
						%li 
							= link_to "管理控制台", hosts_path
							%li#fat-menu.dropdown
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
									= current_user.email
									%b.caret
								%ul.dropdown-menu
									%li 
										= link_to "账户信息", hosts_path
									%li.divider
									%li 
										= link_to "管理控制台", hosts_path
									%li 
										= link_to "充值通道", '#'
									%li.divider
									%li
										= link_to "注销", destroy_user_session_path, method: "delete"
					- else
						%li  
							= link_to "登录", new_user_session_path


