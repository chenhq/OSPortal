.navbar.navbar-inverse.navbar-fixed-top
	.navbar-inner
		.container		
			= link_to "胜世云平台", root_path, :class => "brand"
			%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			.collapse.nav-collapse
				%ul.nav.pull-right
					%li
						= link_to "首页", root_path
					%li
						= link_to "产品介绍", product_path
					%li
						= link_to "关于我们", about_path
					-# %li
					-# 	= link_to "联系我们", contact_path
					- if sign_in?
						%li 
							= link_to "管理控制台", current_user
						%li#fat-menu.dropdown
							%a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
								= current_user.email
								%b.caret
							%ul.dropdown-menu
								%li 
									= link_to "账户信息", current_user
								%li.divider
								%li 
									= link_to "管理控制台", current_user
								%li 
									= link_to "充值通道", '#'
								%li.divider
								%li
									= link_to "注销", signout_path, method: "delete"
					- else
						%li  
							= link_to "登录", signin_path
				

