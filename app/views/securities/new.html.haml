%section.panel
	%header.panel-heading
		规则管理
		%span.tools.pull-right
			%a.fa.fa-chevron-down{:href => "javascript:;"}
			%a.fa.fa-cog{:href => "javascript:;"}
			%a.fa.fa-times{:href => "javascript:;"}
	.panel-body
		#rule-tableactionable
	%a.close{"data-dismiss" => "modal", :href => securities_path} ×
	%h3 创建防火墙
	#form-firewall.form.form-inline
		= text_field_tag "id", "-1", :type => "hidden"
		%label.control-label
			%i.red> *
			防火墙名称:
		= text_field_tag "name","FireWall Name"
		%label.control-label
			%i.red> *
			防火墙描述:
		= text_field_tag "description", "Description"
	%table.table.table-bordered.table-condensed#rules_table
		%caption
			%p 
		%thead
			%tr
				%th
				%th 协议
				%th 开始端口
				%th 结束端口		
				%th 源地址
				%th 操作

		%tbody.table#rule_data
			= render 'securities/rule_tmpl'

	.btn-toolbar{:style => "margin:5px 5px;"}
		.btn-group.pull-right
			#add_new_rule_btn.btn{:href => "#"}
				%i.icon-plus>
				添加规则
	%br/
	%a.btn.btn-primary.submit_firewall{ :action => "create" } 创建防火墙
	%a.btn{:href => securities_path }取消

